{
  "name": "Niconico Check",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Check if there is update for the favorite video.",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "http://www.nicovideo.jp/",
    "history",
    "notifications"
  ]
}
